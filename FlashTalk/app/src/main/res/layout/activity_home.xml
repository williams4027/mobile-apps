<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="blake.com.flashtalk.HomeActivity">

    <TextView
        android:text="@string/labelHomeWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelHomeWelcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Deck Name"
        android:layout_below="@+id/labelHomeWelcome"
        android:paddingTop="20dp"
        android:id="@+id/labelDeck" />

    <View style="@style/Divider"
        android:id="@+id/labelDivider"
        android:layout_below="@+id/labelDeck"/>

    <ListView
        android:id="@+id/deckList"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/actionDivider"
        android:layout_below="@+id/labelDivider"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ListView>

    <View style="@style/Divider"
        android:id="@+id/actionDivider"
        android:layout_above="@+id/btnAddDeck"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddDeck"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true" />



</RelativeLayout>
